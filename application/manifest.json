{
    "version": "1.0.1",
    "name": "Gradient Block",
    "buildPath": "dist/",
    "permissions": ["slobs.scenes-sources"],
    "supportedPlatforms": ["twitch", "youtube", "facebook"],
    "icon": "./images/sq-icon.jpg",
    "sources": [
      {
        "type": "browser_source",
        "name": "Gradient Block",
        "id": "gradient_block",
        "about": {
          "description": "Customizable gradient source.",
          "bannerImage": "./images/app-icon.jpg"
        },
        "file": "index.html",
        "initialSize": {
          "type": "absolute",
          "width": 400,
          "height": 400
        }
      }
    ],
    "pages": [
      {
        "slot": "top_nav",
        "file": "settings.html",
        "persistent": true,
        "allowPopout": true,
        "popOutSize": {
          "width": 600,
          "height": 600
        }
      }
    ]
  }